{
  "name": "starter",
  "version": "1.0.0",
  "description": "Node Starter Project",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "ncc build src/index.ts",
    "lint": "eslint ./src --ext .ts,.tsx --fix &&  eslint ./tests --ext .ts,.tsx --fix   ",
    "format": "prettier --write **/*.ts",
    "test": "mocha -r ts-node/register -t 30s 'tests/*.test.ts'"
  },
 "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm test"
    }
  }
,

  "repository": {
    "type": "git",
    "url": "git+https://github.com/mchirico/node-starter-mocha.git"
  },
